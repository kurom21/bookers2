<%= render 'books/list2', user: @user %>

<h1>New book</h1>
<%= form_with model: @book, url: books_path, method: :post do |f| %>
 <label>Title</label>
 <%= f.text_field :title %>
 <label>Opinion</label>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<%= link_to book_path(book.id) do %>
<%= book.title %>
<% end %>

<%= book.body %>

<% end %>