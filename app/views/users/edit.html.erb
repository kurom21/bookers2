<h1>User info</h1>
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
<label>name</label>
<%= f.text_field :name %>
<label>image</label>
<%= f.file_field :image, accept: "image/*" %>
<label>introduction</label>
<%= f.text_area :introduction %>
<%= f.submit 'Update user' %>
<% end %>