<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<label>Title</label>
  <div class=><%= f.text_field :title %></div>
  <label>Body</label>
  <div class=><%= f.text_area :body %></div>

  <div class=><%= f.submit "Update Book" %></div>

<% end %>

<%= link_to "show", book_path(@book.id) %> |
