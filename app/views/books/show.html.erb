<%= render 'list2', user: @user %>

<h1>New book</h1>
<%= form_with model: @book, url: books_path, method: :post do |f| %>
 <label>Title</label>
 <%= f.text_field :title %>
 <label>Opinion</label>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<%= image_tag @book.get_profile_image(100,100) %>
<%= @book.user.name %>

<%= @book.title %>
<%= @book.body %>
<% if @book.user == current_user %>
<%= link_to "Edit", edit_book_path(@book.id) %> |
<%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
<% end %>